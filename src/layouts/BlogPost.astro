---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import BaseLayout from './BaseLayout.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tag } = Astro.props;
---

<h1 class="font-bold text-lfred-500 text-6xl pb-4">{title}</h1>
<div class="pb-4">
	<FormattedDate date={pubDate}></FormattedDate>
	<p class="w-min text-zinc-400">{tag}</p>
</div>
<div class="flex pb-8">
	<img width="300" height="auto" src={heroImage}></img>
</div>
<div class=`blog-post ${tag === "music" ? 'music-post' : ''}`>
	<slot></slot>
</div>
