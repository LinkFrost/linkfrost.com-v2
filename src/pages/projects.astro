---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import FeaturedProject from '../components/FeaturedProject.astro';
---

<BaseLayout title="Projects - LinkFrost" description={SITE_DESCRIPTION}>
	<main>
		<div class="transition-opacity ease-in-out animate-fade-in-first">
			<h1 class="font-bold text-lfred-500 text-6xl pb-8">Projects</h1>
			<p class="pb-4">Various software projects I've worked on throughout my time in college and my freetime. My interests are usually full-stack focused, but I'm always down to try cool new tech.</p>
		</div>

    <div class="transition-opacity ease-in-out animate-fade-in-first">
      <h2 class="font-semibold text-white text-2xl pb-4">Featured Project:</h2>
      <FeaturedProject></FeaturedProject>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 justify-between transition-opacity ease-in-out animate-fade-in-second">
      <ProjectCard 
      name="letsthink" 
      description="Need to guage feedback from your audience? Create an anonymous message board or poll and watch the results in real time." 
      logo="/img/letsthinkLogo.png" 
      liveLink="https://letsth.ink/"
      repoLink="https://github.com/LinkFrost/letsthink">
    </ProjectCard>

    <ProjectCard 
      name="LoneMusic"
      description="Social media website for uploading song instrumentals and vocal covers." 
      logo="/img/LoneMusicLogo.png" 
      liveLink="https://lonemusic.up.railway.app/" 
      repoLink="https://github.com/LinkFrost/LoneMusic">
    </ProjectCard>

    <ProjectCard
      name="Star Wars Explorer"
      description="A way to look up basic information about Star Wars characters, ships, movies, and more."
      logo="/img/SWExplorerLogo.png"
      liveLink="https://sw-explorer.linkfrost.com"
      repoLink="https://github.com/LinkFrost/Star-Wars-Explorer">
    </ProjectCard>

    <ProjectCard 
      name="EJMR Annotation Project" 
      description="NLP task focused on classifying the toxicity of posts on the EJMR website." 
      logo="/img/CodeBracket.png" 
      repoLink="https://github.com/LinkFrost/EJMR-Annotation-Project">
    </ProjectCard>
    </div>
	</main>
</BaseLayout>